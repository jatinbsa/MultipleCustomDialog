<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/rel_title"

            android:background="@drawable/rectangle_top">
            <TextView
                android:fontFamily="sans-serif"
                android:layout_centerHorizontal="true"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_title_name"
                android:padding="12dp"
                android:textSize="@dimen/text_size_secondary"
                android:textColor="@color/white"
                android:textStyle="normal" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_list"
            android:layout_below="@+id/rel_title"

            android:background="@drawable/rectangle_bottom"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/rel_inside"
                android:orientation="vertical"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                >

                <TextView
                    android:visibility="gone"
                    android:id="@+id/text_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp"
                    android:gravity="center"
                    android:text="@string/there_is_no_saved_playlist" />
                <ListView
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:divider="@color/white"
                    android:dividerHeight="1px"
                    android:visibility="visible"
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/rel_inside"
                android:id="@+id/linear_button"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_alignParentBottom="true"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:background="@drawable/back_style_button"
                    android:layout_height="wrap_content">



                    <TextView
                        android:fontFamily="sans-serif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_left"
                        android:paddingRight="@dimen/padding_right"
                        android:paddingTop="@dimen/padding_top"
                        android:paddingBottom="@dimen/padding_bottom"
                        android:gravity="center"
                        android:background="@drawable/ripple_back"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="normal"
                        android:textSize="@dimen/text_size_secondary"
                        android:text="@android:string/cancel"
                        android:id="@+id/button_one" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/back_style_button"
                    android:layout_height="wrap_content">


                    <TextView
                        android:fontFamily="sans-serif"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_left"
                        android:paddingRight="@dimen/padding_right"
                        android:paddingTop="@dimen/padding_top"
                        android:paddingBottom="@dimen/padding_bottom"
                        android:background="@drawable/ripple_back"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="normal"
                        android:textSize="@dimen/text_size_secondary"
                        android:text="ok"
                        android:id="@+id/button_two" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/back_style_button"
                    android:layout_height="wrap_content">


                    <TextView
                        android:fontFamily="sans-serif"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_left"
                        android:paddingRight="@dimen/padding_right"
                        android:paddingTop="@dimen/padding_top"
                        android:paddingBottom="@dimen/padding_bottom"
                        android:background="@drawable/ripple_back"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="normal"
                        android:textSize="@dimen/text_size_secondary"
                        android:text="retry"
                        android:id="@+id/button_three" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>